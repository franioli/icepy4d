import numpy as np
import matplotlib.pyplot as plt
import cv2
from lib.base_classes.images import ImageDS
import threading

global ax, _plot_style

images = ImageDS("data/img/p2")
image = cv2.cvtColor(images[0], cv2.COLOR_BGR2RGB)
_plot_style = dict(
    markersize=5,
    markeredgewidth=2,
    markerfacecolor="none",
    markeredgecolor="r",
    marker="x",
    linestyle="none",
)

coords = []

#
DEBOUNCE_DUR = 0.25
t = None


def on_press(event):
    global t
    if t is None:
        t = threading.Timer(DEBOUNCE_DUR, on_singleclick, [event])
        t.start()
    if event.dblclick:
        t.cancel()
        on_dblclick(event)


def on_dblclick(event):
    global t
    print("You double-clicked", event.button, event.xdata, event.ydata)
    t = None


def on_singleclick(event):
    global t
    print("You single-clicked", event.button, event.xdata, event.ydata)
    t = None


